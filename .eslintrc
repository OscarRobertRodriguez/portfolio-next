{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {

    "ecmaVersion": 6,
    "allowImportExportEverywhere": true,
    "sourceType": "module",
    "ecmaFeatures": {

      "jsx": false,

      "experimentalObjectRestSpread": true
    }

  },

  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "rules": {
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": true
    }],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "no-console": "off",
    "no-useless-concat": 0,
    "prefer-template": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  }
}